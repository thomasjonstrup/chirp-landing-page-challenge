---
import like from "../assets/like.svg";
import twitterBlue from "../assets/twitter-blue.svg";

export interface Props {
	usertag: string;
	name: string;
	body: string;
	likes: number;
	image: string;
}

const { usertag, name, body, likes, image } = Astro.props;
---

<div class="rounded-md bg-white p-[20px]">
	<div class="flex justify-between">
		<div class="flex">
			<img src={image} alt="avatar 01" class="pr-4" />

			<div>
				<h4 class="font-bold">{name}</h4>
				<p class="text-gray-c text-xs">{usertag}</p>
			</div>
		</div>

		<img src={twitterBlue} alt="twitter icon" />
	</div>
	<p class="text-gray-c py-[14px]">
		{body}
	</p>
	<div class="flex justify-between">
		<div class="flex">
			<img src={like} alt="like tweet" class="pr-4" />
			<span>{likes}</span>
		</div>
		<p>March 2, 2021</p>
	</div>
</div>
